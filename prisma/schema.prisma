generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Member {
  id             String   @id @default(cuid())
  clerkId        String   @unique
  email          String   @unique
  firstName      String?
  lastName       String?
  phoneNumber    String?
  address        String?
  zipCode        String?
  city           String?
  membershipType String   @default("STANDARD")
  role           Role     @default(MEMBER)
  balance        Decimal  @default(0.0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  payments        Payment[]
  eventsCreated   Event[]          @relation("EventCreatedBy")
  eventsAttending Event[]          @relation("EventAttendees")
  posts           Post[]
  comments        Comment[]
  transactions    Transaction[]
  paymentRequests PaymentRequest[]

  @@index([firstName])
}

model Event {
  id          String  @id @default(cuid())
  title       String
  description String?

  program     PlanItem[] // Relations
  coverImage  String?
  location    String?
  address     String?
  startAt     DateTime
  totalCost   Int?
  clubSubsidy Int?

  createdById String
  createdBy   Member @relation("EventCreatedBy", fields: [createdById], references: [id])

  attendees Member[] @relation("EventAttendees")

  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  posts           Post[]
  photos          Photo[]
  transactions    Transaction[]
  paymentRequests PaymentRequest[]

  @@index([startAt])
}

model PlanItem {
  id          String  @id @default(cuid())
  time        String
  title       String
  description String?

  order Int @default(0)

  eventId String
  event   Event  @relation(fields: [eventId], references: [id], onDelete: Cascade)
}

model Post {
  id       String       @id @default(cuid())
  title    String
  content  String
  category PostCategory @default(NYHET)

  authorId String
  author   Member @relation(fields: [authorId], references: [id])

  eventId String?
  event   Event?  @relation(fields: [eventId], references: [id])

  comments Comment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdAt])
}

model Comment {
  id      String @id @default(cuid())
  content String

  authorId String
  author   Member @relation(fields: [authorId], references: [id])

  postId String
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)

  parentId String?
  parent   Comment?  @relation("CommentReplies", fields: [parentId], references: [id])
  children Comment[] @relation("CommentReplies")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Payment {
  id     String        @id @default(cuid())
  period String // f.eks. "2025-12"
  amount Int?
  status PaymentStatus @default(UNPAID)
  paidAt DateTime?     @default(now())

  memberId String
  member   Member @relation(fields: [memberId], references: [id])

  updatedAt DateTime @updatedAt

  @@unique([memberId, period])
  @@index([period])
}

enum Role {
  MEMBER
  ADMIN
}

enum PaymentStatus {
  PAID
  UNPAID
}

enum PostCategory {
  EVENT
  NYHET
  REFERAT
  SOSIALT
}

enum RequestStatus {
  PENDING
  PAID
  WAIVED
}

enum PaymentCategory {
  MEMBERSHIP_FEE
  EVENT
  OTHER
}

model PaymentRequest {
  id          String          @id @default(cuid())
  title       String
  description String?
  amount      Int
  dueDate     DateTime?
  status      RequestStatus   @default(PENDING)
  category    PaymentCategory @default(OTHER)

  // Who owes the money?
  memberId String
  member   Member @relation(fields: [memberId], references: [id])

  // Is this linked to a specific event? (Optional)
  eventId String?
  event   Event?  @relation(fields: [eventId], references: [id])

  // When paid, link to the actual accounting transaction
  transactionId String?      @unique
  transaction   Transaction? @relation(fields: [transactionId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Photo {
  id      String  @id @default(cuid())
  url     String
  caption String?

  eventId String
  event   Event  @relation(fields: [eventId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Transaction {
  id          String   @id @default(cuid())
  amount      Decimal
  description String
  category    String // e.g., "MEMBER_FEE", "EVENT", "EXPENSE"
  date        DateTime @default(now())

  memberId String?
  member   Member? @relation(fields: [memberId], references: [id])

  eventId String?
  event   Event?  @relation(fields: [eventId], references: [id])

  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  paymentRequest PaymentRequest?

  @@index([date])
  @@index([category])
  @@index([memberId])
}
