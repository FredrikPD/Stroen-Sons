generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Member {
  id             String       @id @default(cuid())
  clerkId        String?      @unique
  email          String       @unique
  firstName      String?
  lastName       String?
  phoneNumber    String?
  address        String?
  zipCode        String?
  city           String?
  membershipType String       @default("STANDARD")
  userRoleId     String?
  userRole       UserRole?    @relation(fields: [userRoleId], references: [id])
  role           Role         @default(MEMBER)
  status         MemberStatus @default(ACTIVE)
  balance        Decimal      @default(0.0)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  lastActiveAt   DateTime     @default(now())

  payments        Payment[]
  eventsCreated   Event[]          @relation("EventCreatedBy")
  eventsAttending Event[]          @relation("EventAttendees")
  posts           Post[]
  transactions    Transaction[]
  paymentRequests PaymentRequest[]
  notifications   Notification[]

  @@index([firstName])
}

model MembershipType {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  fee         Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Event {
  id          String  @id @default(cuid())
  title       String
  description String?
  category    String?

  program              PlanItem[] // Relations
  coverImage           String?
  location             String?
  address              String?
  isTba                Boolean    @default(false)
  startAt              DateTime
  endAt                DateTime? // Optional end date for multi-day events
  registrationDeadline DateTime? // Deadline for signing up
  maxAttendees         Int? // Capacity limit
  totalCost            Int?
  clubSubsidy          Int?

  createdById String
  createdBy   Member @relation("EventCreatedBy", fields: [createdById], references: [id])

  attendees Member[] @relation("EventAttendees")

  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  posts           Post[]
  photos          Photo[]
  transactions    Transaction[]
  paymentRequests PaymentRequest[]

  @@index([startAt])
}

model EventCategory {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  color       String   @default("blue")
  createdAt   DateTime @default(now())
}

model PlanItem {
  id          String    @id @default(cuid())
  time        String
  date        DateTime? // Optional date for multi-day events
  title       String
  description String?

  order Int @default(0)

  eventId String
  event   Event  @relation(fields: [eventId], references: [id], onDelete: Cascade)
}

model Post {
  id       String  @id @default(cuid())
  title    String
  content  String
  category String  @default("NYHET")
  isPinned Boolean @default(false)

  authorId String
  author   Member @relation(fields: [authorId], references: [id])

  eventId String?
  event   Event?  @relation(fields: [eventId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  attachments PostAttachment[]

  @@index([createdAt])
}

model PostAttachment {
  id   String @id @default(cuid())
  url  String
  name String
  size Int
  type String // MIME type or simple type

  postId String
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

model Payment {
  id     String        @id @default(cuid())
  period String // f.eks. "2025-12"
  amount Int?
  status PaymentStatus @default(UNPAID)
  paidAt DateTime?     @default(now())

  memberId String
  member   Member @relation(fields: [memberId], references: [id])

  updatedAt DateTime @updatedAt

  @@unique([memberId, period])
  @@index([period])
}

enum Role {
  MEMBER
  MODERATOR
  ADMIN
}

model UserRole {
  id           String   @id @default(cuid())
  name         String   @unique
  description  String?
  isSystem     Boolean  @default(false)
  allowedPaths String[] // List of regex or glob patterns
  members      Member[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum PaymentStatus {
  PAID
  UNPAID
}

model Category {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  color       String   @default("blue")
  createdAt   DateTime @default(now())
}

enum MemberStatus {
  ACTIVE
  PENDING
  INACTIVE
}

enum RequestStatus {
  PENDING
  PAID
  WAIVED
}

enum PaymentCategory {
  MEMBERSHIP_FEE
  EVENT
  OTHER
}

model PaymentRequest {
  id          String          @id @default(cuid())
  title       String
  description String?
  amount      Decimal         @db.Decimal(10, 2)
  dueDate     DateTime?
  status      RequestStatus   @default(PENDING)
  category    PaymentCategory @default(OTHER)

  // Who owes the money?
  memberId String
  member   Member @relation(fields: [memberId], references: [id])

  // Is this linked to a specific event? (Optional)
  eventId String?
  event   Event?  @relation(fields: [eventId], references: [id])

  // When paid, link to the actual accounting transaction
  transactionId String?      @unique
  transaction   Transaction? @relation(fields: [transactionId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Photo {
  id      String  @id @default(cuid())
  url     String
  caption String?

  eventId String
  event   Event  @relation(fields: [eventId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Transaction {
  id          String   @id @default(cuid())
  amount      Decimal
  description String
  category    String // e.g., "MEMBER_FEE", "EVENT", "EXPENSE"
  date        DateTime @default(now())

  memberId String?
  member   Member? @relation(fields: [memberId], references: [id])

  eventId String?
  event   Event?  @relation(fields: [eventId], references: [id])

  receiptUrl String?
  receiptKey String?

  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  paymentRequest PaymentRequest?

  @@index([category])
  @@index([memberId])
}

model Notification {
  id        String           @id @default(cuid())
  memberId  String
  member    Member           @relation(fields: [memberId], references: [id], onDelete: Cascade)
  type      NotificationType
  title     String
  message   String
  link      String?
  read      Boolean          @default(false)
  createdAt DateTime         @default(now())

  @@index([memberId])
  @@index([read])
}

enum NotificationType {
  EVENT_CREATED
  EVENT_UPDATED
  POST_CREATED
  POST_UPDATED
  INVOICE_CREATED
  BALANCE_WITHDRAWAL
  PHOTOS_UPLOADED
}

model SystemSetting {
  key         String  @id
  value       String
  description String?
}
